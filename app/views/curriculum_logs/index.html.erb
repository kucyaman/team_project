<div class="container">
  <h1 class ="text-center mt-5 cantata"><%= current_user.profile.name %>'s loguma</h1>
  <div class ="text-center">
    <p>today's total: <%= daily_study_time(current_user) %></p>
  </div>

  <!-- 進捗 -->
  <div class = 'col-6 mx-auto'>
    <%= render 'shared/progress'%>
  </div>

  <div class="row mt-1">    
    <div class="text-center my-3">     
      <%= link_to profile_path do %>
        <%= image_tag current_user.profile.avatar.url, class: 'rounded-circle mr15', width: '100', height: '100' %> 
      <% end %>
    </div>
  </div>
  <div class="text-center mb-3">
    <%= link_to "https://twitter.com/share?url=https://loguma.onrender.com&text=#{current_user.profile.name}さんの今日の勉強時間は#{daily_study_time(current_user)}、#{count_logs_today(current_user)}個Logumaをつけたくま🐻&hashtags=Loguma", title: 'Twitter', target: '_blank' do %>
      <i class="bi bi-twitter"></i>
    <% end %>
  </div>   

  <!-- 検索窓 -->
  <div class="col-lg-10 offset-lg-1 mb-3">
    <%= render 'search', q: @q, url: curriculum_logs_path %>
  </div>
  <%= render @curriculum_logs %>
  <%= paginate @curriculum_logs, theme: 'bootstrap-5' %>

  <%= link_to 'ログ一覧をCSVでダウンロード', csv_output_curriculum_logs_path %>
</div>
